    "babel-eslint": "^10.1.0",
    "esbuild": "^0.6.32",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-prettier": "^3.1.4",
    "fastify": "^3.1.1",
    "fastify-compress": "^3.2.2",
    "fastify-cors": "^4.1.0",
    "fastify-helmet": "^4.0.2",
    "fastify-static": "^3.2.0",
